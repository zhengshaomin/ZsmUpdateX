<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">#FA7298</item><!--原色-->
        <item name="colorPrimaryVariant">#FA7298</item><!--原色变体-->
        <item name="colorOnPrimary">@color/white</item><!--彩色原色-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FA7298</item><!--灰色-->
        <item name="colorSecondaryVariant">#FA7298</item><!--灰色-->
        <item name="colorOnSecondary">#FFFFFF</item><!--二级颜色-->

        <item name="titleTextColor">#FFFFFF</item><!--状态栏标题字体颜色-->
        <item name="subtitleTextColor">#FFFFFF</item><!--状态栏二级标题字体颜色-->
        <item name="colorControlNormal">#FFFFFF</item><!--控制正常颜色-->
        <item name="android:actionMenuTextColor">#FFFFFF</item><!--动作菜单文本颜色-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication" />
</resources>